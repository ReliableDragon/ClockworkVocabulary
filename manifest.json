{
    "name": "ClockworkVocabulary",
    "version": "1.0",
    "description": "Build your vocabulary, one word at a time.",
    "permissions": [
      "storage",
      "contextMenus",
      "activeTab",
      "tabs",
      "http://*/*",
      "https://*/*",
      "<all_urls>",
      "*://*/*"],
    "background": {
      "scripts": ["background.js"]
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/CV16.png"
      }
    },
    "icons": {
      "16": "images/CV16.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
