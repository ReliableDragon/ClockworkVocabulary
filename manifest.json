{
    "name": "ClockworkVocabulary",
    "version": "1.0",
    "description": "Build your vocabulary, one word at a time.",
    "permissions": [
      "storage",
      "contextMenus",
      "webNavigation",
      "<all_urls>"],
    "background": {
      "scripts": ["background.js"]
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/CV16.png",
        "32": "images/CV32_font.png",
        "64": "images/CV64_font.png",
        "128": "images/CV128_font.png"
      }
    },
    "icons": {
      "16": "images/CV16.png",
      "32": "images/CV32_font.png",
      "64": "images/CV64_font.png",
      "128": "images/CV128_font.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
